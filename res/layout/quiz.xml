<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:id="@+id/quizprompt"
              android:gravity="center"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="40dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:id="@+id/question1"
              android:gravity="center"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="40dp"
              android:layout_below="@id/quizprompt"/>

    <EditText android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:id="@+id/answer1"
              android:layout_toRightOf="@id/question1"
              android:layout_below="@id/quizprompt"
              android:layout_marginLeft="12dp"
              android:gravity="center"
              android:inputType="number"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:id="@+id/question2"
              android:gravity="center"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="40dp"
              android:layout_below="@id/question1"/>

    <EditText android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:id="@+id/answer2"
              android:layout_toRightOf="@id/question2"
              android:layout_below="@id/answer1"
              android:layout_marginLeft="12dp"
              android:gravity="center"
              android:inputType="number"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:id="@+id/question3"
              android:gravity="center"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="40dp"
              android:layout_below="@id/question2"/>

    <EditText android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:id="@+id/answer3"
              android:layout_toRightOf="@id/question3"
              android:layout_below="@id/answer2"
              android:layout_marginLeft="12dp"
              android:gravity="center"
              android:inputType="number"/>

    <Button android:text="提交"
            android:id="@+id/submit"
            android:layout_below="@id/quizprompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>